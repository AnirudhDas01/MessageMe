<h2 class="ui center aligned medium icon header">
  <i class="circular pink coffee icon"></i>
 Connect with Future.!
</h2>

<div class="ui two column grid">
    
    <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
        <div class="content">
            <div class="ui small feed">
                <h4 class="ui header">{Group Name or 2nd Person Name}</h4>
                <%= render @messages %>
            </div>
        </div>
        <div class="extra content">
            <form class="ui reply form">
                <div class="field">
                    <div class="ui fluid icon shadow input">
                        <input type="text" placeholder="Enter a message...">
                        <i class="bordered inverted orange icon send rounded-icon"></i>
                    </div>
                </div>
            </form>
        </div>
    </div>
    </div>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
